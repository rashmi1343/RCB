<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.rcb.ui.otpverifyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/dash_heading_txt"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:id="@+id/tvverifycode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Enter your\nVerification Code"
            android:textSize="25dp"
            ></TextView>


        <ImageView
            android:id="@+id/img_bell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/bell"></ImageView>

        <LinearLayout
            android:id="@+id/root_otp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/otp_edit_box1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:inputType="phone|number"
                android:maxLength="1"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                android:textSize="30sp"

                android:backgroundTint="@color/black"
                          />

            <EditText
                android:id="@+id/otp_edit_box2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:inputType="phone|number"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:backgroundTint="@color/black"

                />

            <EditText
                android:id="@+id/otp_edit_box3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:textSize="30sp"
                android:textAlignment="center"
                android:inputType="phone|number"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:backgroundTint="@color/black"

                />

            <EditText
                android:id="@+id/otp_edit_box4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textSize="30sp"
                android:layout_weight="1"
                android:inputType="phone|number"
                android:maxLength="1"
                android:textAlignment="center"
                android:imeOptions="actionDone"
                android:backgroundTint="@color/black"

                />


        </LinearLayout>



        <Button
            android:id="@+id/btnverify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_margin="15dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            ></Button>

        <TextView
            android:id="@+id/tvsendcodeagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Send the Code again"
            android:textSize="22dp"
            android:textColor="@android:color/holo_blue_dark"
            ></TextView>


        <TextView
            android:id="@+id/tvchangeemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Change the Email Id"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="22dp"
            ></TextView>





    </LinearLayout>


</RelativeLayout>