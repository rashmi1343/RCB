<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_account_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Bank Details"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tv_account_detail"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/tvbankname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Name"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:textColor="@android:color/black"
            android:textSize="17sp" />


        <EditText
            android:id="@+id/edtbankname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:id="@+id/tvbankacountname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Account Name"
            android:layout_gravity="left"
            android:textColor="@android:color/black"
            android:textSize="17sp" />


        <EditText
            android:id="@+id/edtbankaccountname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>


        <TextView
            android:id="@+id/tvbankacountno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account No"
            android:layout_gravity="left"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edtbankaccountno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>


        <TextView
            android:id="@+id/tvbankifsccode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IFSC Code"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edtbankifsccode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <LinearLayout
            android:id="@+id/llalreadyuploadedacademic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/curve_background"
            android:weightSum="3"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgpassbook"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="24dp"
                ></ImageView>

            <TextView android:id="@+id/tvviewiconbank"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center"

                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="30dp"></TextView>

            <TextView android:id="@+id/tvdeleteiconbank"
                android:layout_weight="1"
                android:textSize="24dp"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/btnuploadbankdetail"
            android:background="@color/color_bttn"
            android:text="Upload Passbook"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>

        <Button
            android:id="@+id/btnsavebankdetail"
            android:background="@color/color_bttn"
            android:text="Save"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>

        <Button
            android:id="@+id/btncancelbankdetail"
            android:background="@color/color_bttn"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>


</RelativeLayout>