<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.rcb.ui.GuardiandetailActivity">


    <RelativeLayout
        android:id="@+id/abt_header_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/back_past_layout_detail"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circular_layout">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/back"></ImageView>

        </RelativeLayout>

        <TextView
            android:id="@+id/abt_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:text="My Profile"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>

    <View
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_below="@+id/abt_header_layout"
        android:background="@color/color_silver"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewline"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_personal_Detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Guardian Detail"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tv_father_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="Name of Father"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_father_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                    </EditText>


                    <TextView
                        android:id="@+id/tv_mother_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Name of Mother"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_mother_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">


                        ></EditText>


                    <TextView
                        android:id="@+id/tv_category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Category"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <!--<EditText
                        android:id="@+id/edt_category_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ></EditText>-->

                    <Spinner
                        android:id="@+id/spincategory"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">


                        ></Spinner>


                    <TextView
                        android:id="@+id/tv_nationality_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Nationality"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <!-- <EditText
                         android:id="@+id/edt_nationality_name"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         ></EditText>-->

                    <Spinner
                        android:id="@+id/spinnationality"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">


                        ></Spinner>


                    <TextView
                        android:id="@+id/tv_domicile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="State of Domicile"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <!--  <EditText
                          android:id="@+id/edt_domicile_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          ></EditText>-->

                    <Spinner
                        android:id="@+id/spindomicile"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        ></Spinner>

                    <TextView
                        android:id="@+id/tv_emergency_contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Emergency Contact Number"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"

                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_emergency_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"

                        android:inputType="number"></EditText>


                    <TextView
                        android:id="@+id/tvbloodgroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Blood Group"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>


                    <Spinner
                        android:id="@+id/spinbloodgrp"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"


                        ></Spinner>


                    <TextView
                        android:id="@+id/tv_relation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Relation"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_relation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"


                        ></EditText>


                    <TextView
                        android:id="@+id/tv_adhaar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Aadhaar No"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_adhaar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"


                        android:inputType="number"></EditText>


                    <TextView
                        android:id="@+id/tv_passport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Passport No"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_passport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"

                        ></EditText>




                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_peraddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Permanent Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tv_address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="5dp"

                        android:text="Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_address_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"


                        android:text="A64"
                        android:textAlignment="textStart"

                        ></EditText>

                    <TextView
                        android:id="@+id/tv_pincode_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="5dp"

                        android:text="Pincode"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_pincode_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"


                        android:inputType="number"></EditText>

                    <TextView
                        android:id="@+id/tv_state_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="5dp"

                        android:text="State"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <!-- <EditText
                         android:id="@+id/edt_state_name"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         ></EditText>-->
                    <Spinner
                        android:id="@+id/spinstate"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="5dp"

                        android:entries="@array/city_list"
                        android:textColor="@color/black"></Spinner>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llayoutsameaddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"

                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvchecksameadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20dp"></TextView>


                <TextView
                    android:id="@+id/tvstrchk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=" Same as Permanent Address"
                    android:textColor="#000"></TextView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_coraddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Correspondence Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>


                    <TextView
                        android:id="@+id/tv_coraddress_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_coraddress_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"

                        ></EditText>


                    <TextView
                        android:id="@+id/tv_corpincode_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Pincode"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/edt_corpincode_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"


                        android:inputType="number"></EditText>


                    <TextView
                        android:id="@+id/tv_corstate_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="State"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>


                    <Spinner
                        android:id="@+id/spinstatecor"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"

                        android:entries="@array/city_list"></Spinner>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btnacademdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_bttn"
                android:text="Academic Record"
                android:textColor="@android:color/white"></Button>
        </LinearLayout>




    </ScrollView>

</LinearLayout>
