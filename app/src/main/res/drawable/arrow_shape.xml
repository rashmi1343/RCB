<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:width="120dp" android:height="30dp" android:right="6dp">
        <shape>
            <solid android:color="#B82925"/>
            <corners
                android:bottomLeftRadius="2dp"
                android:topLeftRadius="2dp"/>
        </shape>
    </item>

    <item android:width="21dp" android:height="21dp"
        android:left="120dp">
        <rotate android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="#B82925"/>
            </shape>
        </rotate>
    </item>

</layer-list>